OS!=	uname

.if ${OS} == "FreeBSD"
CFLAGS+=-DHAVE_PROGNAME -DHAVE_LOGIN_CAP -DHAVE_SETPROCTITLE -DHAVE_INET6
CFLAGS+=-DHAVE_STRLCXX -DHAVE_ERR -DHAVE_SNPRINTF -DHAVE_PCAP_FREECODE
CFLAGS+=-DHAVE_INET_NTOP -DNEED_SYS_ENDIAN
.endif

.if ${OS} == "Linux"
CFLAGS+=-DHAVE_PROGNAME -DHAVE_ERR -DHAVE_SNPRINTF
CFLAGS+=-DHAVE_INET6 -DHAVE_INET_NTOP
CFLAGS+=-Dth_sport=source -Dth_dport=dest -Duh_sport=source -Duh_dport=dest
CFLAGS+=-I/usr/include/pcap
.endif

.if ${OS} == "NetBSD"
CFLAGS+=-DHAVE_PROGNAME -DHAVE_LOGIN_CAP -DHAVE_SETPROCTITLE -DHAVE_INET6
CFLAGS+=-DHAVE_STRLCXX -DHAVE_ERR -DHAVE_SNPRINTF -DHAVE_INET_NTOP
.endif

.if ${OS} == "OpenBSD"
CFLAGS+=-DHAVE_PROGNAME -DHAVE_LOGIN_CAP -DHAVE_SETPROCTITLE -DHAVE_INET6
CFLAGS+=-DHAVE_STRLCXX -DHAVE_ERR -DHAVE_SNPRINTF -DHAVE_PCAP_FREECODE
CFLAGS+=-DHAVE_INET_NTOP -DHAVE_PFLOG
.endif
