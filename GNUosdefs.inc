OS=	$(shell uname)

ifeq "$(OS)" "FreeBSD"
CFLAGS+=-DHAVE_PROGNAME -DHAVE_LOGIN_CAP -DHAVE_SETPROCTITLE -DHAVE_STRLCXX
CFLAGS+=-DHAVE_ERR -DHAVE_SNPRINTF -DHAVE_INET6 -DHAVE_PCAP_FREECODE
CFLAGS+=-DHAVE_INET_NTOP -DNEED_SYS_ENDIAN
INSTALL=install
BINGRP=	bin
endif

ifeq "$(OS)" "Linux"
CFLAGS+=-DHAVE_PROGNAME -DHAVE_SNPRINTF -DHAVE_ERR -DHAVE_INITGROUPS
CFLAGS+=-DHAVE_INET6 -DHAVE_INET_NTOP
CFLAGS+=-Dth_sport=source -Dth_dport=dest -Duh_sport=source -Duh_dport=dest
CFLAGS+=-I/usr/include/pcap
INSTALL=install
endif

ifeq "$(OS)" "NetBSD"
CFLAGS+=-DHAVE_PROGNAME -DHAVE_LOGIN_CAP -DHAVE_SETPROCTITLE -DHAVE_STRLCXX
CFLAGS+=-DHAVE_ERR -DHAVE_SNPRINTF -DHAVE_INET6 -DHAVE_INET_NTOP
INSTALL=install
BINGRP=	bin
endif

ifeq "$(OS)" "OpenBSD"
CFLAGS+=-DHAVE_PROGNAME -DHAVE_LOGIN_CAP -DHAVE_SETPROCTITLE -DHAVE_STRLCXX
CFLAGS+=-DHAVE_ERR -DHAVE_SNPRINTF -DHAVE_INET6 -DHAVE_PCAP_FREECODE
CFLAGS+=-DHAVE_INET_NTOP -DHAVE_PFLOG
INSTALL=install
BINGRP=	bin
endif

ifeq "$(OS)" "QNX"
CFLAGS+=-D_QNX_SOURCE -DHAVE_INITGROUPS -DHAVE_INET6 -DHAVE_PROGNAME
CFLAGS+=-DHAVE_SNPRINTF -DHAVE_ERR -DHAVE_PCAP_FREECODE -DHAVE_INET_NTOP
CFLAGS+=-Du_int8_t=_Uint8t -Du_int16_t=_Uint16t -Du_int32_t=_Uint32t
CFLAGS+=-Du_int64_t=_Uint64t
endif

ifeq "$(OS)" "SunOS"
CFLAGS+=-DHAVE_SNPRINTF -DHAVE_INITGROUPS -DFIX_READ_TIMEOUT
CFLAGS+=-Du_int8_t=uint8_t -Du_int16_t=uint16_t -Du_int32_t=uint32_t
CFLAGS+=-Du_int64_t=uint64_t
BINOWN=	bin
BINGRP=	bin
endif
